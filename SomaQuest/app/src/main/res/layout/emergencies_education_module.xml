<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â˜°"
            android:textSize="24sp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOMAQUEST"
            android:textColor="#FFA500"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/student_img"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOW TO HANDLE EMERGENCIES"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFA500"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="8dp">

        <!-- Tile 1: ADDITION -->

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:background="#F0FCA2"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FIRE \nEMERGENCY"
                    android:textSize="10sp"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:background="#4CAF50"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/EmergencyModuleButton1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="CONTINUE"
                    android:textSize="9sp"
                    android:background="#86D718"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Tile 2: SUBTRACTION -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:background="#F0FCA2"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TERRORIST ATTACK"
                    android:textSize="10sp"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:background="#4CAF50"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/EmergencyModuleButton2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="CONTINUE"
                    android:textSize="9sp"
                    android:background="#86D718"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Tile 3: MULTIPLICATION -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:background="#F0FCA2"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FLOODS EMERGENCY"
                    android:textSize="10sp"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="40dp"
                    android:layout_height="2dp"
                    android:background="#4CAF50"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/EmergencyModuleButton3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="CONTINUE"
                    android:textSize="9sp"
                    android:background="#86D718"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>
        </FrameLayout>


    </GridLayout>

</LinearLayout>